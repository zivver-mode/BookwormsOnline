@page
@inject IConfiguration Config
@model BookwormsOnline.Pages.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card bw-card shadow-lg">
            <div class="card-header p-4">
                <h3 class="mb-1">Sign in to Bookworms</h3>
                <p class="mb-0 text-muted">Access your account securely using your email and password.</p>
            </div>

            <div class="card-body p-4">
                @* Yellow info/warning banner (session expired, signed in elsewhere, etc.) *@
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-warning">@Model.Message</div>
                }

                @* Red policy/business error banner (invalid login, locked out, etc.) *@
                @if (!string.IsNullOrEmpty(Model.PolicyError))
                {
                    <div class="alert alert-danger py-2" role="alert">@Model.PolicyError</div>
                }

                <form method="post" id="loginForm" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Input.RecaptchaToken" id="recaptchaToken" />
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email"
                               class="form-control"
                               placeholder="name@example.com"
                               autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-2">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password"
                               type="password"
                               class="form-control"
                               placeholder="Your password"
                               autocomplete="current-password" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <a class="link-light small" asp-page="/ForgotPassword">Forgot password?</a>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Sign In</button>
                        <a class="btn btn-outline-light" asp-page="/Register">Create a new account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js?render=@Config["Recaptcha:SiteKey"]"></script>

    <script>
        const form = document.getElementById("loginForm");

        form.addEventListener("submit", function (e) {
            // If grecaptcha didn't load, let server-side handle it (will fail verification)
            if (typeof grecaptcha === "undefined") return;

            e.preventDefault();
            grecaptcha.ready(function () {
                grecaptcha.execute('@Config["Recaptcha:SiteKey"]', { action: 'login' })
                    .then(function (token) {
                        document.getElementById("recaptchaToken").value = token;
                        form.submit();
                    });
            });
        });
    </script>
}

