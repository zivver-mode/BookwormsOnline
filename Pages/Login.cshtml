@page
@model BookwormsOnline.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-5">
        <div class="card bw-card shadow-lg">
            <div class="card-header p-4">
                <h3 class="mb-1">Welcome back</h3>
                <p class="mb-0 text-muted">Sign in to your Bookworms account.</p>
            </div>

            <div class="card-body p-4">
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-warning">@Model.Message</div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label"></label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Your password" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        <label class="form-check-label" asp-for="Input.RememberMe"></label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Login</button>
                        <a class="btn btn-outline-light" asp-page="/Register">Create account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
