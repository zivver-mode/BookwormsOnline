@page
@inject IConfiguration Config
@model BookwormsOnline.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card bw-card shadow-lg">
            <div class="card-header p-4">
                <h3 class="mb-1">Reset Password</h3>
                <p class="mb-0 text-muted">Choose a strong new password. Recent passwords cannot be reused.</p>
            </div>

            <div class="card-body p-4">

                @* Yellow info/warning banner *@
                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="alert alert-warning">@Model.Message</div>
                }

                @* Green success banner *@
                @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                {
                    <div class="alert alert-success py-2" role="alert">@Model.SuccessMessage</div>
                }

                @* Red policy/business banner *@
                @if (!string.IsNullOrEmpty(Model.PolicyError))
                {
                    <div class="alert alert-danger py-2" role="alert">@Model.PolicyError</div>
                }

                <form method="post" id="resetForm" novalidate>
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="Input.Email" />
                    <input type="hidden" asp-for="Input.Token" />
                    <input type="hidden" asp-for="Input.RecaptchaToken" id="recaptchaToken" />

                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label"></label>
                        <input asp-for="Input.NewPassword"
                               type="password"
                               class="form-control"
                               placeholder="New password"
                               autocomplete="new-password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmNewPassword" class="form-label"></label>
                        <input asp-for="Input.ConfirmNewPassword"
                               type="password"
                               class="form-control"
                               placeholder="Confirm new password"
                               autocomplete="new-password" />
                        <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger small"></span>
                    </div>

                    <button class="btn btn-primary w-100" type="submit">Reset Password</button>
                </form>

                @if (!string.IsNullOrEmpty(Model.InfoMessage))
                {
                    <div class="alert alert-info mt-3">@Model.InfoMessage</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="https://www.google.com/recaptcha/api.js?render=@Config["Recaptcha:SiteKey"]"></script>

    <script>
        const form = document.getElementById("resetForm");

        form.addEventListener("submit", function (e) {
            // If recaptcha script failed to load, let server reject (policy error)
            if (typeof grecaptcha === "undefined") return;

            e.preventDefault();
            grecaptcha.ready(function () {
                grecaptcha.execute('@Config["Recaptcha:SiteKey"]', { action: 'resetpassword' })
                    .then(function (token) {
                        document.getElementById("recaptchaToken").value = token;
                        form.submit();
                    });
            });
        });
    </script>
}
