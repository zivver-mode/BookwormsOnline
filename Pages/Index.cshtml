@page
@model BookwormsOnline.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<h2>Bookworms Online - Home</h2>

@if (Model.CurrentUser == null)
{
    <p>Loading user...</p>
}
else
{
    <div class="card p-3" style="max-width: 700px;">
        <h4>Welcome, @Model.CurrentUser.FirstName @Model.CurrentUser.LastName</h4>

        <p><b>Email:</b> @Model.CurrentUser.Email</p>
        <p><b>Mobile:</b> @Model.CurrentUser.MobileNo</p>
        <p><b>Billing Address:</b> @Model.CurrentUser.BillingAddress</p>
        <p><b>Shipping Address:</b> @Model.CurrentUser.ShippingAddress</p>

        <p><b>Credit Card:</b> @Model.MaskedCreditCard</p>

        @if (!string.IsNullOrEmpty(Model.CurrentUser.PhotoFileName))
        {
            <div class="mt-3">
                <b>Profile Photo:</b><br />
                <img src="~/uploads/@Model.CurrentUser.PhotoFileName" alt="Profile Photo"
                     style="max-width: 220px; border: 1px solid #ccc; padding: 4px;" />
            </div>
        }

        <div class="mt-3">
            <a class="btn btn-secondary" href="/Logout">Logout</a>
        </div>
    </div>
}
