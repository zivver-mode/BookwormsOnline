@using Microsoft.AspNetCore.Identity
@using BookwormsOnline.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bookworms Online</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bw-body">
    <nav class="navbar navbar-expand-lg navbar-dark bw-nav shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-semibold" asp-page="/Index">📚 Bookworms</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#bwNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="bwNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item"><a class="nav-link" asp-page="/Enable2FA">2FA</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Admin">Admin</a></li>
                    }
                </ul>

                <ul class="navbar-nav ms-auto align-items-lg-center">
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item me-lg-3">
                            <span class="navbar-text bw-nav-user">
                                Hello, @User.Identity?.Name
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light btn-sm" href="/Logout">Logout</a>
                        </li>
                    }
                    else
                    {
                        <a class="nav-link" asp-page="/Register">Create Account</a>
                        <a class="btn btn-light btn-sm ms-lg-2" asp-page="/Login">Sign In</a>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container bw-container">
        @RenderBody()
    </main>

    <footer class="bw-footer">
        <div class="container d-flex justify-content-between align-items-center">
            <span class="text-muted small">© @DateTime.Now.Year Bookworms Online</span>
            <span class="text-muted small">Secure demo site</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
