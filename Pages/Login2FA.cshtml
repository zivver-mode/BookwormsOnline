@page
@model BookwormsOnline.Pages.Login2FAModel
@{
    ViewData["Title"] = "2FA Verification";
}

<h2>2FA Verification</h2>
<p>Enter the 6-digit code from Microsoft Authenticator.</p>


<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Input.Email" />
    <input type="hidden" asp-for="Input.RememberMe" />

    <div class="mb-2">
        <label asp-for="Input.Code">OTP Code</label>
        <input asp-for="Input.Code" class="form-control" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type="submit">Verify</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
