@page
@model BookwormsOnline.Pages.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
        <div class="card bw-card shadow-lg">
            <div class="card-header p-4">
                <h3 class="mb-1">Change Password</h3>
                <p class="mb-0 text-muted">Choose a strong new password. Recent passwords cannot be reused.</p>
            </div>

            <div class="card-body p-4">
                @* Single consistent place for all page-level errors *@
                @if (!string.IsNullOrEmpty(Model.PolicyError))
                {
                    <div class="alert alert-danger py-2">@Model.PolicyError</div>
                }


                <form method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Input.CurrentPassword" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="Input.CurrentPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="current-password" />
                            </button>
                        </div>
                        <span asp-validation-for="Input.CurrentPassword" class="text-danger small"></span>
                    </div>


                    <div class="mb-3">
                        <label asp-for="Input.NewPassword" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="Input.NewPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="new-password" />
                            </button>
                        </div>
                        <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ConfirmNewPassword" class="form-label"></label>

                        <div class="input-group">
                            <input asp-for="Input.ConfirmNewPassword"
                                   type="password"
                                   class="form-control"
                                   autocomplete="new-password" />
                        </div>
                        <span asp-validation-for="Input.ConfirmNewPassword" class="text-danger small"></span>
                    </div>


                    <button class="btn btn-primary w-100" type="submit">Update Password</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


